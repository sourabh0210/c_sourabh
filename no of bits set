#include <stdio.h>

int main(void) {
	int num,count = 0, i;
	printf("Enter a number: ");
	//scanf("%d",&num);
	num = 15;
	printf("%d\n",num);
	for(i = 31; i>=0;i--)
	{
	    if( ( num>>i )&1)
	    {
	        count++;
	    }
	    else
	    {
	        /*Do nothing*/
	    }
	}
	printf("%d\n",count);
	return 0;
}
